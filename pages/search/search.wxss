/* pages/search/search.wxss */
page {
  width: 100%;
  height: 100%;
}
/* 搜索框 */
.search {
  height:100rpx; 
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #f5f5f5;
}
.sousuo {
  height:80rpx;
  width: 90%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 14px;
  background-color: #f5f5f5;
  border-radius: 10px 10px 10px 10px;
}
.dingwei {
  height: 70rpx;
  width: 60%;
  /* float: left; */
  margin-left: 5%;
}
.current_city {
  width: 60%;
  height: 70rpx;
  margin-left: 5%;
}
.chengshi {
  width: 48%;
  height: 60rpx;
  font-size: 15px;
  border-radius: 10px 10px 10px 10px;
  background-color: #0885eb;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}
.city {
  width: 100%;
  height: 300rpx;
  font-size: 15px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  color: #707070;
}
.xz {
  width: 30%;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 10px 10px 10px 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}